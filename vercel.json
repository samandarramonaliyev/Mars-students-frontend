{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://mars-students-backend.onrender.com/api/:path*"
    },
    {
      "source": "/media/:path*",
      "destination": "https://mars-students-backend.onrender.com/media/:path*"
    },
    {
      "source": "/admin/:path*",
      "destination": "https://mars-students-backend.onrender.com/admin/:path*"
    },
    {
      "source": "/static/:path*",
      "destination": "https://mars-students-backend.onrender.com/static/:path*"
    },
    {
      "source": "/:path*",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Frame-Options", "value": "SAMEORIGIN" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
